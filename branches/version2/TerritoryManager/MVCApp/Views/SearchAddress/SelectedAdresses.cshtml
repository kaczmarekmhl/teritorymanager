@model List<MVCApp.Models.Person>

@{
    ViewBag.Title = @Strings.SearchSelectedAdresses;
    int districtId = ViewBag.DistrictId;
    string districtName = ViewBag.DistrictName;
}


<h2>@Strings.District - @Html.DisplayFor(model => districtName) - @Strings.SearchSelectedAdresses </h2>

    <div class="button">
        @Html.ActionLink(Strings.SearchSaveSelectedAsPdf, "SelectedAdressesPdfFile", new { id = districtId })
    </div>
    <div class="button">
        @Html.ActionLink(Strings.SearchDisplaySelectedOnMap, "SelectedAdressesMap", new { id = districtId }, new { target = "_blank" })
    </div>
    <div class="spacer" />
<div id="personList">
    @Html.Partial("_SelectedPersonList")
</div>