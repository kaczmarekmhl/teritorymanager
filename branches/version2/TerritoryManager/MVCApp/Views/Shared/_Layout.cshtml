<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title Find Poles in Denmark</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("HOME", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("My territories", "Index", "MyTerritories")</li>
                        }
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Manage territories", "Index", "TerritoryManage")</li>
                            <li>@Html.ActionLink("Add User", "Register", "Account")</li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Territory Manager Application</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/tmngr")
    @RenderSection("scripts", required: false)
</body>
</html>
