@model IEnumerable<MVCApp.Models.DistrictModel>

<h3> My districts: </h3>
<form method="get">
    <select name="searchDistrictID">
        @foreach (var item in Model)
        { 
            <option value="@item.Id">@item.PostCode @item.Name</option>
        }
    </select>
    <input type="submit" value="Search" />
</form>